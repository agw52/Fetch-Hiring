<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<EditText
    android:layout_width="200dp"
    android:layout_height="50dp"
    app:layout_constraintTop_toTopOf="@id/resultsArea"
    app:layout_constraintLeft_toLeftOf="@id/resultsArea"
    android:textIsSelectable="true"
    android:cursorVisible="false"
    android:layout_marginTop="350dp"
    android:layout_marginLeft="70dp"
    android:id="@+id/putLink"
    />
    <ExpandableListView
        android:layout_width="360dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:id="@+id/resultsArea"
        android:visibility="invisible"
        />
    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Display Results"
        android:id="@+id/button"
        app:layout_constraintTop_toBottomOf="@id/resultsArea"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="135dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>